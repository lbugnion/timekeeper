@page "/login"
@inject ILogger<LoginProviders> Log

@{
    var providers = new Dictionary<string, string>
    {
        { "github", "GitHub" },
        { "twitter", "Twitter" }
    };

    var today = new Timekeeper.Client.Model.Days(Log);
}

<header class="@today.BackgroundClass">
    <img src="@today.ImagePath"
         class="logo-image" />
</header>

<main>
    <article>
        <h1 class="@today.ForegroundClass">@Branding.LoginPageTitle</h1>

        <ul>
            @foreach (var provider in providers)
            {
                <li>
                    <a href="/.auth/login/@provider.Key?post_login_redirect_uri=/host">
                        Sign in with @provider.Value
                    </a>
                </li>
            }
        </ul>
    </article>
</main>

<footer class="@today.FooterClass">
    <div class="status-message">Please log in</div>

    <div class="status-message about-link">| <a href="/about">About Timekeeper</a></div>
</footer>